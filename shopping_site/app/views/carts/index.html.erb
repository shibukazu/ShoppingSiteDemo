<p id="notice"><%= notice %></p>

<h1>カートの中身</h1>
<% if !@carts.empty? %>
    <table>
        <thead>
        <tr>
            <th>商品名</th>
            <th>価格</th>
            <th colspan="3"></th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% sum = 0 %>
        <% @carts.each do |cart| %>
            <tr>
                <td><%= cart.item.name %></td>
                <td><%= cart.item.price.to_s(:delimited) %>円</td>
                <td><%= link_to (image_tag (cart.item.image.url) if cart.item.image?), item_path(cart.item) %></td>
                <td><%= link_to "削除", cart_path(cart), method: :delete %></td>
            </tr>
            <% sum = sum + cart.item.price %>

        <% end %>
    </tbody>
    </table>

    <h2>合計金額は<%= sum.to_s(:delimited) %>円です</h2>
    <%= form_with(url: new_order_path, method: :get, local: true) do |form| %>
        <div class="actions">
            <%= form.submit value: "注文する" %>
        </div>
    <% end %>
<% else %>
    <h2>まだカートは空です</h2>
<% end %>


