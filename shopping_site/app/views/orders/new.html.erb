<p id="notice"><%= notice %></p>

<h1>注文確認ページ</h1>
<% if !@carts.empty? %>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% sum = 0 %>
        <% @carts.each do |cart| %>
            <tr>
                <td><%= cart.item.name %></td>
                <td><%= cart.item.price.to_s(:delimited) %>円</td>
                <td><%= link_to (image_tag (cart.item.image.url) if cart.item.image?), item_path(cart.item) %></td>
                <td><%= link_to "削除", cart_path(cart), method: :delete %></td>
            </tr>
            <% sum = sum + cart.item.price %>

        <% end %>
    </tbody>
    </table>

    <h2>合計金額は<%= sum.to_s(:delimited) %>円です</h2>
    <h2>本当に購入しますか？</h2>
    <%= form_with(url: orders_create_path, method: :get, local: true) do |form| %>
        <div class="actions">
            <%= form.submit value: "はい" %>
        </div>
    <% end %>
    <%= form_with(url: carts_path, method: :get, local: true) do |form| %>
        <div class="actions">
            <%= form.submit value: "いいえ" %>
        </div>
    <% end %>
<% else %>
    <h2>まだカートは空です</h2>
<% end %>
