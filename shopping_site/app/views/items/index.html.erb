<p id="notice"><%= notice %></p>

<h1>ALL Items</h1>
<%= link_to "商品を追加する", new_item_path %>

<%= form_with(url: items_path, method: :get, local: true) do |form| %>
    <%= form.text_field :search, value: @search_word %>
    <%= form.submit value: "検索" %>
<% end %>

<%= render "shared/sort_items", url: items_path, search_word: @search_word %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th>商品画像</th>
      <th colspan="3"></th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price.to_s(:delimited) %>円</td>
        <td><%= image_tag item.image.url if item.image? %></td>
        <td><%= link_to '削除', item, method: :delete, data: { confirm: '削除してもよろしいですか?' } %></td>
        <td><%= link_to '編集', edit_item_path(item) %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>


