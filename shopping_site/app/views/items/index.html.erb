<p id="notice"><%= notice %></p>

<h1>ALl Items</h1>
<%= link_to "Add new Item", new_item_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.image %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Edit', edit_item_path %>
      </tr>
    <% end %>
  </tbody>
</table>


