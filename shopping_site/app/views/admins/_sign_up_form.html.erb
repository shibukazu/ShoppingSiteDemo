<% if flash[:info].present? %>
<%= form_with(model: admin, local: true) do |form| %>
  <%= render 'shared/errors' %>

  <div class="field">
    <%= form.label :email, "メールアドレス", class: "mx-auto" %>
    <%= form.text_field :email, value: flash[:info].fetch("email"), placeholder: "メールアドレスを入力", class: "form-control mb-2" %>
  </div>

  <div class="field">
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password, placeholder: "管理者パスワード", class: "form-control mb-2" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, "パスワード" %>
    <%= form.password_field :password_confirmation, placeholder: "管理者パスワード(確認)", class: "form-control mb-2" %>
  </div>

  <div class="actions mx-auto">
    <%= form.submit value: "管理者登録", class: "btn btn-primary mx" %>
  </div>
<% end %>


<% else %>
<%= form_with(model: admin, local: true) do |form| %>
  <%= render 'shared/errors' %>

  <div class="field">
    <%= form.label :email, "メールアドレス", class: "mx-auto" %>
    <%= form.text_field :email, placeholder: "メールアドレスを入力", class: "form-control mb-2" %>
  </div>

  <div class="field">
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password, placeholder: "管理者パスワード", class: "form-control mb-2" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, "パスワード" %>
    <%= form.password_field :password_confirmation, placeholder: "管理者パスワード(確認)", class: "form-control mb-2" %>
  </div>

  <div class="actions mx-auto">
    <%= form.submit value: "管理者登録", class: "btn btn-primary mx" %>
  </div>
<% end %>
<% end %>
